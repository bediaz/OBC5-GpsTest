<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_bottom_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <!--android:text="GSV,4,13,15,22,,,,24,19,046,,25,,,,27,19,233\nGSV,4,1,15,01,06,317,,08,22,274,,10,65,052,11,1,9,310\n"-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_media_pause"/>

    <TextView
        android:id="@+id/section_label"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:gravity="bottom"
        android:typeface="monospace"
        android:fontFamily="monospace"
        android:textSize="10sp"
        android:scrollbarSize="40dp"
        android:scrollbarFadeDuration="2500"
        android:scrollbarDefaultDelayBeforeFade="4000"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/txtTimeToGetNMEA"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:typeface="monospace"
        android:fontFamily="monospace"
        android:background="@android:color/holo_orange_light"
        android:text="TIME TO GET NMEA:"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>

